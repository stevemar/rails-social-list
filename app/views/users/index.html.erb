
<% if account_signed_in? %>

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Twitter Handle</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.first_name + ' ' + user.last_name, user %></td>
        <td><%= user.twitter %></td>
        <td>
          <%= link_to "Edit", edit_user_path(user), class:"btn btn-sm btn-secondary" %>
        </td>
        <td>
          <%= link_to 'Delete', user, method: :delete,  data: { "turbo-method": :delete, confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
        </td>
      <tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "New user", new_user_path, class:"btn btn-primary" %>

<% else %>

  <h1>Hello World!</h1>
  This is my first Rails Webpage...

<% end %>
